datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Track {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  spotifyId    String   @unique
  name         String
  artist       String
  thumbnailUrl String
  dateAdded    DateTime
  labels       Label[]
}

model Label {
  id     Int     @id @default(autoincrement())
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  name   String
  tracks Track[]
}

model User {
  id          Int     @id @default(autoincrement())
  spotifyId   String  @unique
  accessToken String
  labels      Label[]
  tracks      Track[]
}
